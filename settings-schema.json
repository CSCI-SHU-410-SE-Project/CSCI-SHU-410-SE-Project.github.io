{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Settings",
  "description": "Full settings of the Deskulpt application.",
  "type": "object",
  "properties": {
    "app": {
      "description": "Application-wide settings.",
      "$ref": "#/$defs/AppSettings"
    },
    "widgets": {
      "description": "The mapping from widget IDs to their respective settings.",
      "type": "object",
      "additionalProperties": {
        "$ref": "#/$defs/WidgetSettings"
      }
    }
  },
  "required": [
    "app",
    "widgets"
  ],
  "$defs": {
    "AppSettings": {
      "description": "Application-wide settings.",
      "type": "object",
      "properties": {
        "theme": {
          "description": "The application theme.",
          "$ref": "#/$defs/Theme"
        },
        "shortcuts": {
          "description": "The keyboard shortcuts.",
          "$ref": "#/$defs/Shortcuts"
        }
      },
      "required": [
        "theme",
        "shortcuts"
      ]
    },
    "Theme": {
      "description": "Light/dark theme of the application.",
      "type": "string",
      "enum": [
        "light",
        "dark"
      ]
    },
    "Shortcuts": {
      "description": "Keyboard shortcuts registered in the application.\n\nA keyboard shortcut being `None` means that it is disabled, otherwise it is\na string parsable into [`Shortcut`](tauri_plugin_global_shortcut::Shortcut).",
      "type": "object",
      "properties": {
        "toggleCanvasImode": {
          "description": "For toggling canvas interaction mode.",
          "type": [
            "string",
            "null"
          ]
        },
        "openManager": {
          "description": "For opening the manager window.",
          "type": [
            "string",
            "null"
          ]
        }
      }
    },
    "WidgetSettings": {
      "description": "Per-widget settings.\n\nDifferent from widget configurations, these are independent of the widget\nconfiguration files and are managed internally by the application.",
      "type": "object",
      "properties": {
        "x": {
          "description": "The leftmost x-coordinate in pixels.",
          "type": "integer",
          "format": "int32"
        },
        "y": {
          "description": "The topmost y-coordinate in pixels.",
          "type": "integer",
          "format": "int32"
        },
        "opacity": {
          "description": "The opacity in percentage.",
          "type": "integer",
          "format": "int32"
        }
      },
      "required": [
        "x",
        "y",
        "opacity"
      ]
    }
  }
}